@model IEnumerable<AnhQuoc_MVC_C5.Category>

@{
    ViewBag.Title = "Index";
}

@section scripts{
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });
    </script>
}

<h1 class="mt-3 mb-3">Category Management</h1>
<hr />

<div class="row mt-3 mb-3">
    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
            @TempData["AlertMessage"]
        </div>
    }

    <div class="d-flex col-md-8">
        <a class="btn btn-success" href="@Url.Action("Add", "Category", null)">Create New</a>
    </div>
    <div style="position: relative;" class="col-md-4 row search">
        <div class="col-md-12">
            <input class="form-control" type="search" placeholder="Search by name..">
        </div>
        <div class="d-flex" style="position: absolute; right: 0px; align-items: center;">
            <i class="bi bi-search" style="display: none"></i>
        </div>
    </div>

</div>

@{  Html.RenderPartial("_PartialGetList", Model); }